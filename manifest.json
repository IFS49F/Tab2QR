{
  "manifest_version": 2,
  "name": "Tab2QR",
  "short_name": "Tab2QR",
  "author": "James Shih",
  "version": "2.1.3",
  "description": "A minimalist browser extesion to send the page you are currently viewing to your mobile device.",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "icon38.png",
      "19": "icon19.png"
    },
    "default_title": "Tab2QR",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      }
    }
  },

  "permissions":[
    "activeTab"
  ]
}
